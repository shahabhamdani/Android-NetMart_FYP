<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".customerreg">

    <ImageView
        android:id="@+id/customerlogo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/logo"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/customerTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customerlogo"
        android:gravity="left"
        android:fontFamily="@font/alfa_slab_one"
        android:padding="5dp"
        android:text="Customer"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/signupcustomer"
        android:layout_below="@id/customerTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup to start yor shopping"
        android:paddingLeft="10dp"
        android:textColor="@color/colorGrey"
        android:textSize="19dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:id="@+id/nameCustomer"
        android:layout_below="@id/signupcustomer"
        android:hint="Name"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="textPersonName"
        android:background="@drawable/shape_rect02"/>

    <EditText
        android:id="@+id/phoneNumCustomer"
        android:layout_below="@id/nameCustomer"
        android:hint="Phone Number"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="number"
        android:background="@drawable/shape_rect02"/>

    <LinearLayout
        android:id="@+id/addressCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumCustomer"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/countryCustomer"
            android:layout_below="@id/phoneNumCustomer"
            android:hint="Country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:inputType="textPostalAddress"
            android:background="@drawable/shape_rect02"
            android:textFontWeight="1"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/stateCustomer"
            android:layout_below="@id/phoneNumCustomer"
            android:hint="State"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:inputType="textPostalAddress"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/cityCustomer"
            android:layout_below="@id/phoneNumCustomer"
            android:hint="City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:inputType="textPostalAddress"
            android:layout_weight="1"/>
    </LinearLayout>

    <EditText
        android:id="@+id/completeAddress"
        android:layout_below="@id/addressCustomer"
        android:hint="Complete Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:inputType="textPostalAddress|textImeMultiLine" />

    <EditText
        android:id="@+id/emailCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeAddress"
        android:hint="Email"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:inputType="textEmailAddress" />
    <EditText
        android:id="@+id/passwordCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailCustomer"
        android:hint="Password"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/confirmPasswordcustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordCustomer"
        android:hint="Confirm Password"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/bttnregCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:minWidth="120dp"
        android:layout_below="@+id/confirmPasswordcustomer"
        android:text="Register"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/registerCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Already have an account? Login"
        android:layout_below="@id/bttnregCustomer"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>