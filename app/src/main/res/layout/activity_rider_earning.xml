<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderEarningActivity">




<TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_rect01"
    android:text="Earnings"
    android:textSize="18dp"
    android:textColor="@color/colorBlack"
    android:textStyle="bold"
    android:gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_black"
        android:onClick="onBackClick"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/totalEarningTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textSize="30dp"
        android:text="Total:500 "
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/roboto_light"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/lastMonthEarningTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/totalEarningTv"
        android:textSize="20dp"
        android:text="Last Month:500"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/roboto_light" />


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_below="@id/lastMonthEarningTv"

        android:layout_height="wrap_content">


        <ListView
            android:id="@+id/completedBookingsLv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center_horizontal" />



    </RelativeLayout>





</RelativeLayout>