<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resetpassword"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/noProblem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="110dp"
        android:fontFamily="@font/alfa_slab_one"
        android:padding="10dp"
        android:text="No Problem"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45dp" />

    <ImageView
        android:id="@+id/netmartLogo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/noProblem"
        android:background="@drawable/logo"
        android:gravity="center"
        android:layout_marginLeft="135dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/resetTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your password has been sent to your Email address and Phone Number"
        android:layout_below="@id/netmartLogo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="@color/colorGrey"
        android:gravity="center"/>

    <Button
        android:id="@+id/loginBtn"
        android:layout_below="@id/resetTxt"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@color/colorPrimaryDark"
        android:text="Back"
        android:textColor="@color/colorWhite" />





</RelativeLayout>