<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ForgotPasswordActivity"
    android:background="@color/colorWhite"
    >



    <ImageView
        android:id="@+id/netmartLogo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/mailsent"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"/>

    <TextView
        android:id="@+id/resetTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your password has been sent to your Email address and Phone Number"
        android:layout_below="@id/netmartLogo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/colorGrey"
        android:gravity="center"/>

    <Button
        android:id="@+id/backBtn"
        android:layout_below="@id/resetTxt"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:contextClickable="true"
        android:onClick="onClickBack"
        android:text="Back"
        android:textColor="@color/colorWhite" />




</RelativeLayout>