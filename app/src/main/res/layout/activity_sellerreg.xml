<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".sellerreg">

    <ImageView
        android:id="@+id/sellerlogo"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/logo"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/sellerTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sellerlogo"
        android:gravity="left"
        android:fontFamily="@font/alfa_slab_one"
        android:padding="10dp"
        android:text="Seller"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="45dp" />

    <EditText
        android:id="@+id/storeNameSeller"
        android:layout_below="@id/sellerTxt"
        android:hint="Store Name"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="textPersonName"
        android:background="@drawable/shape_rect02"/>

    <EditText
        android:id="@+id/phoneNumSeller"
        android:layout_below="@id/storeNameSeller"
        android:hint="Phone Number"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="number"
        android:background="@drawable/shape_rect02"/>

    <LinearLayout
        android:id="@+id/addressSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneNumSeller"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/countrySeller"
            android:layout_below="@id/phoneNumSeller"
            android:hint="Country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:inputType="textPostalAddress"
            android:background="@drawable/shape_rect02"
            android:textFontWeight="1"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/stateSeller"
            android:layout_below="@id/phoneNumSeller"
            android:hint="State"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:inputType="textPostalAddress"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/citySeller"
            android:layout_below="@id/phoneNumSeller"
            android:hint="City"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:inputType="textPostalAddress"
            android:layout_weight="1"/>
    </LinearLayout>

    <EditText
        android:id="@+id/completeaddressSeller"
        android:layout_below="@id/addressSeller"
        android:hint="Complete Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:inputType="textPostalAddress|textImeMultiLine" />

    <EditText
        android:id="@+id/emailSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/completeaddressSeller"
        android:hint="Email"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/passwordSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailSeller"
        android:hint="Password"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/confirmPasswordSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordSeller"
        android:hint="Confirm Password"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/bttnregSeller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:minWidth="120dp"
        android:layout_below="@+id/confirmPasswordSeller"
        android:text="Register"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/registerSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Already have an account? Login"
        android:layout_below="@id/bttnregSeller"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />



</RelativeLayout>