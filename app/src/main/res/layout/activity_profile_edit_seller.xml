<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileEditSellerActivity">



  <com.blogspot.atifsoftwares.circularimageview.CircularImageView
      android:id="@+id/profileIv"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:c_border="true"
      app:c_background_color="@color/colorWhite"
      app:c_border_width="1dp"
      app:c_border_color="@color/colorPrimaryDark"
      android:layout_marginTop="10dp"
      android:src="@drawable/ic_person_black"
      android:layout_centerHorizontal="true"
      />
  <EditText
      android:id="@+id/shopNameEt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/profileIv"
      android:layout_margin="5dp"
      android:background="@drawable/shape_rect02"
      android:padding="10dp"
      android:hint="Store Name"
      android:inputType="textPersonName|textCapWords"
      />

  <EditText
      android:id="@+id/phoneEt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/shopNameEt"
      android:layout_margin="5dp"
      android:background="@drawable/shape_rect02"
      android:padding="10dp"
      android:hint="phone#"
      android:inputType="phone"

      >

  </EditText>
  <LinearLayout
      android:id="@+id/addressLl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/phoneEt"
      android:orientation="horizontal"
      >
    <EditText
        android:id="@+id/countryEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/shape_rect02"
        android:padding="10dp"
        android:hint="Country"
        android:inputType="textPostalAddress"

        />

    <EditText
        android:id="@+id/stateEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:padding="10dp"
        android:hint="State"
        android:inputType="textPostalAddress"

       />

    <EditText
        android:id="@+id/cityEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rect02"
        android:padding="10dp"
        android:hint="City"
        android:inputType="textPostalAddress"

        />


  </LinearLayout>
  <EditText
      android:id="@+id/addressEt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/addressLl"
      android:layout_margin="5dp"
      android:background="@drawable/shape_rect02"
      android:padding="10dp"
      android:hint="Complete Address"
      android:inputType="textPostalAddress|textMultiLine"

      />

  <EditText
      android:id="@+id/emailEt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/addressEt"
      android:layout_margin="5dp"
      android:background="@drawable/shape_rect02"
      android:padding="10dp"
      android:hint="Email"
      android:inputType="textEmailAddress"

      />

  <EditText
      android:id="@+id/passwordEt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/emailEt"
      android:layout_margin="5dp"
      android:background="@drawable/shape_rect02"
      android:padding="10dp"
      android:hint="Password"
      android:inputType="numberPassword"

      />

  <EditText
      android:id="@+id/cPasswordEt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/passwordEt"
      android:layout_margin="5dp"
      android:background="@drawable/shape_rect02"
      android:padding="10dp"
      android:hint="Confirm_password"
      android:inputType="numberPassword"

     />

  <Button
      android:id="@+id/updateBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
      android:layout_below="@id/cPasswordEt"
      android:layout_centerHorizontal="true"
      android:text="update"
      android:textStyle="bold"
      android:background="@color/colourBlack"
      />


</RelativeLayout>