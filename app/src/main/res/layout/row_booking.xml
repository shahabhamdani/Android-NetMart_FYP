<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:id="@+id/riderIv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_riderlogo"
            app:c_border="true"
            app:c_border_width="1dp"
            app:c_border_color="@color/colorGrey"
            android:layout_marginRight="5dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/riderIv"
            android:layout_toRightOf="@id/riderIv">

            <TextView
                android:id="@+id/bookingIdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="0000000"
                android:textColor="@color/colourBlack"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bookingTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textColor="@color/colourBlack"/>

            <TextView
                android:id="@+id/feeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Rs:20"
                android:textColor="@color/colourBlack"/>

            <TextView
                android:id="@+id/bookingCostTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="total Cost: Rs:500"/>

        </LinearLayout>




    </RelativeLayout>

</androidx.cardview.widget.CardView>